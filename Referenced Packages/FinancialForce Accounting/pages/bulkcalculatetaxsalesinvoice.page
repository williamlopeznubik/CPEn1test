<apex:page standardController="c2g__codaInvoice__c" extensions="c2g.CalculateTaxSalesInvoiceController" recordSetVar="invoices" action="{!initialise}">
	<script src="{!URLFOR($Resource.coda2go,'coda2go/web/script/lib.js')}" type="text/javascript"></script>
	<apex:stylesheet value="{!URLFOR($Resource.c2g__coda2go,'coda2go/web/css/style.css')}"/>

	<apex:sectionHeader title="{!$Label.codaPageConfirmCalculateTaxInvoiceDocumentTitle}"  help="{!URLFOR('/apex/c2g__codahelploader?topicid=1318')}"/>
	
	<apex:form id="invoiceForm"  onsubmit="if(CODA2GoButtons.disableSaveButtons){ return CODA2GoButtons.disableSaveButtons(); }">
	<apex:pageBlock >
		<apex:pagemessages />
			<apex:pageBlockButtons location="bottom">
				<apex:commandButton value="{!$Label.BulkCalculateInvoiceConfirmButton}" action="{!calculateTax}" id="calculatetax_h" styleclass="hiddensubmit"/>
				<apex:commandButton value="{!$Label.CancelAndGoBack}" action="{!cancel}" id="cancel_h" styleclass="hiddensubmit" immediate="true"/>
				<!-- End of Hidden Buttons -->
				<apex:commandButton value="{!$Label.BulkCalculateInvoiceConfirmButton}" id="calculatetax" onclick="document.getElementById('{!$Component.calculatetax_h}').click();return false;" rendered="{!showCalculateTaxButton}" />			
				<apex:commandButton value="{!$Label.CancelAndGoBack}" id="cancel" rerender="" onclick="if(!CODA.queing()){document.getElementById('{!$Component.cancel_h}').click()};return false;"/>
				
				<script>
					var CODA2GoButtons = new CODA2GoPage();
					var CODA2GoBtnSaveValue = "{!$Label.codaProcessing}";
					CODA2GoButtons.initButtons(["{!$Component.calculatetax}","{!$Component.cancel}"]);
				</script>
			
			</apex:pageBlockButtons>
	</apex:pageBlock>	
	</apex:form>
</apex:page>