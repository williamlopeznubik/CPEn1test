<apex:page controller="c2g.CODACurrencyRevalUnlockController" tabStyle="c2g__codaCurrencyRevaluation__c">
	<apex:stylesheet value="{!URLFOR($Resource.c2g__coda2go,'coda2go/web/css/style.css')}"/>
	<apex:stylesheet value="{!URLFOR($Resource.c2g__front,'front/base/base.css')}"/>
	<script src="{!URLFOR($Resource.coda2go,'coda2go/web/script/lib.js')}" type="text/javascript"></script>

	<apex:form onsubmit="if(CODA2GoButtons.disableSaveButtons){ return CODA2GoButtons.disableSaveButtons(); }">
		<!-- Header -->
		<apex:sectionHeader title="{!$Label.codaPageCurRevalUnlockTitle}" help="{!URLFOR('/apex/c2g__codahelploader?topicid=1049')}"/>
		<apex:pageBlock >
			<apex:pageBlockButtons >
				<!-- Hidden Buttons -->
				<apex:commandButton value="{!$Label.codaCurRevalUnlockUnlock}" action="{!unlock}" id="unlock_h" styleclass="hiddensubmit"/>
				<apex:commandButton value="{!$Label.codaCurRevalUnlockCancel}" action="{!cancel}" id="cancel_h" styleclass="hiddensubmit" immediate="true"/>
				<!-- End of Hidden Buttons -->
				<apex:commandButton value="{!$Label.codaCurRevalUnlockUnlock}" id="unlock" rendered="{!ViewState.unlockAllowed}" onclick="document.getElementById('{!$Component.unlock_h}').click();return false;"/>
				<apex:commandButton value="{!$Label.codaCurRevalUnlockCancel}" id="cancel" rerender="" onclick="if(!CODA.queing()){document.getElementById('{!$Component.cancel_h}').click()};return false;"/>
				<script>
					var CODA2GoButtons = new CODA2GoPage();
					var CODA2GoBtnSaveValue = "{!$Label.codaProcessing}";
					CODA2GoButtons.initButtons([$Component.unlock, $Component.cancel]);
				</script>
			</apex:pageBlockButtons>
			<!-- Messages -->
			<apex:outputPanel id="messagePanel" layout="block">
				<apex:outputPanel id="errorPanel" layout="block" styleClass="pbError" rendered="{!viewstate.showErrorMessages}">
					<apex:repeat value="{!viewstate.errorMessages}" var="errorMessage" rendered="{!viewstate.showErrorMessages}">
						<apex:outputText value="{!errorMessage}"/><br/>
					</apex:repeat>
				</apex:outputPanel>
			</apex:outputPanel>
			<apex:pageBlockSection columns="1">
				<div class="informationArea">
					<h3>{!HTMLENCODE($Label.codaCurRevalUnlockMessage)}</h3>
				</div>
			</apex:pageBlockSection>
			<apex:pageBlockSection columns="1" rendered="{!ViewState.unlockStarted}">
				<div class="informationArea">
					<h3>{!HTMLENCODE($Label.codaCurRevalUnlockStarted)}</h3>
				</div>
			</apex:pageBlockSection>
		</apex:pageBlock>
	</apex:form>

</apex:page>