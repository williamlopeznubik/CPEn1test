<apex:page standardController="c2g__codaInvoice__c" extensions="c2g.CODAInvoiceDiscardController">
	<script src="{!URLFOR($Resource.coda2go,'coda2go/web/script/lib.js')}" type="text/javascript"></script>
	<apex:stylesheet value="{!URLFOR($Resource.c2g__coda2go,'coda2go/web/css/style.css')}"/>
	<style>
	.pbError 
	{
		background-image:url({!URLFOR($Resource.c2g__coda2go, 'coda2go/web/images/pbErrorIcon.gif')});
	}
	</style>
	<apex:form onsubmit="if(CODA2GoButtons.disableSaveButtons){ return CODA2GoButtons.disableSaveButtons(); }">
		<!-- Header -->
		<apex:sectionHeader title="{!$Label.codaPageInvoiceDiscardInvoiceDiscard}" subtitle="{!viewstate.invoice.Dto.Name}" help="{!URLFOR('/apex/c2g__codahelploader?topicid=1026')}"/>
		<!-- Invoice Status -->
		<apex:pageBlock >
			<apex:pageMessages />
			<apex:pageBlockButtons >
				<!-- Hidden Buttons -->
				<apex:commandButton value="{!$Label.codaPageInvoiceDiscardDiscard}" action="{!discard}" id="discard_h" styleclass="hiddensubmit"/>
				<apex:commandButton value="{!$Label.codaPageInvoiceDiscardCancel}" action="{!cancel}" id="cancel_h" styleclass="hiddensubmit" immediate="true" reRender=""/>
				<!-- End of Hidden Buttons -->
				<apex:commandButton value="{!$Label.codaPageInvoiceDiscardDiscard2}" id="discard" onclick="document.getElementById('{!$Component.discard_h}').click();return false;" rendered="{!viewstate.CanDiscardInvoice}"/>				
				<apex:commandButton value="{!$Label.codaPageInvoiceDiscardCancel}" id="cancel" rerender="" onclick="if(!CODA.queing()){document.getElementById('{!$Component.cancel_h}').click()};return false;"/>
				<script>
					var CODA2GoButtons = new CODA2GoPage();
					var CODA2GoBtnSaveValue = "{!$Label.codaPageInvoiceDiscardProcessing}"
	                var discard = document.getElementById("{!$Component.discard}");	                
	                var cancel = document.getElementById("{!$Component.cancel}");
	                CODA2GoButtons.initButtons([discard.id,cancel.id]);
				</script>
			</apex:pageBlockButtons>
			<apex:pageBlockSection >
				<apex:inputField value="{!viewstate.invoice.Dto.c2g__DiscardReason__c}" required="true" style="width:90%;height:60px;" rendered="{!viewstate.CanDiscardInvoice}"/>
			</apex:pageBlockSection>
		</apex:pageBlock>
	</apex:form> 
</apex:page>